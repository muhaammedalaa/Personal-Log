@model PersonalBlog.Models.Articles

@{
    ViewData["Title"] = "Edit Article";
}

<h1>Edit Article</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <p>
        <label>Title:</label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title" style="color:red"></span>
    </p>
    <p>
        <label>Content:</label><br />
        <textarea asp-for="Content" rows="5" cols="50"></textarea>
        <span asp-validation-for="Content" style="color:red"></span>
    </p>
    <p>
        <label>Published Date:</label><br />
        <input asp-for="PublishedDate" type="date" />
        <span asp-validation-for="PublishedDate" style="color:red"></span>
    </p>
    <p>
        <button type="submit">Update</button>
        <a href="@Url.Action("Dashboard", "Admin")">Cancel</a>
    </p>
</form>
